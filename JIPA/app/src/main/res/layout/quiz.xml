<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0066ff"
    android:id="@+id/quiz"
    android:weightSum="1">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Points:"
    android:textSize="30sp"
    android:textColor="#ffffff"
    android:id="@+id/wordPoints"
    android:layout_alignParentTop="true"
    android:layout_toLeftOf="@+id/points"
    android:layout_toStartOf="@+id/points" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:id="@+id/points"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/nextQuestion"
        android:layout_alignEnd="@+id/nextQuestion" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/quizQuestion"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/radioGroup"
        android:layout_below="@+id/wordPoints" />

    <RadioGroup
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.46"
        android:textColor="#ffffff"
        android:id="@+id/radioGroup"
        android:layout_above="@+id/nextQuestion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/nextQuestion"
        android:layout_alignEnd="@+id/nextQuestion">
        <RadioButton
            android:layout_width="match_parent"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_height="match_parent"
            android:id="@+id/answer1"
            />
        <RadioButton
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:id="@+id/answer2"
            />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:id="@+id/answer3"
            android:textColor="#ffffff"
            />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/answer4"
            android:textSize="20sp"
            android:textColor="#ffffff"
            />
            />
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Question"
        android:id="@+id/nextQuestion"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



</RelativeLayout>