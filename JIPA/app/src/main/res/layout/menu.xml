<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#0066ff"
    android:id="@+id/menu"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/title"
        android:layout_marginBottom="33dp"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/NoteCards"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="NoteCards"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:background="#737373"
        android:layout_above="@+id/tips"
        android:layout_marginBottom="44dp"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tips"
        android:id="@+id/tips"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/NoteCards"
        android:layout_alignEnd="@+id/NoteCards"
        android:textColor="#ffffff"
        android:background="#737373"
        android:layout_alignLeft="@+id/NoteCards"
        android:layout_alignStart="@+id/NoteCards" />
</RelativeLayout>